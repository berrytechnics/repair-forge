{
  "name": "circuit-sage",
  "version": "1.0.0",
  "description": "Electronics Repair Business Management System",
  "main": "cli.js",
  "bin": {
    "circuit-sage": "./cli.js"
  },
  "scripts": {
    "link": "chmod +x cli.js && npm link",
    "unlink": "npm uninstall -g $(node -e \"console.log(require('./package.json').name)\")",
    "reinstall": "npm run unlink && npm run link",
    "ci:backend": "cd backend && yarn lint && npx tsc --noEmit && yarn test",
    "ci:frontend": "cd frontend && yarn lint && npx tsc --noEmit && yarn build",
    "ci:all": "npm run ci:backend && npm run ci:frontend",
    "ci:backend:lint": "cd backend && yarn lint",
    "ci:backend:typecheck": "cd backend && npx tsc --noEmit",
    "ci:backend:test": "cd backend && yarn test",
    "ci:frontend:lint": "cd frontend && yarn lint",
    "ci:frontend:typecheck": "cd frontend && npx tsc --noEmit",
    "ci:frontend:build": "cd frontend && yarn build"
  },
  "keywords": [
    "repair",
    "electronics",
    "business",
    "management"
  ],
  "author": "J. Kyle Berry",
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.3.0"
  }
}
